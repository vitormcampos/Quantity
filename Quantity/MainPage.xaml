<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Quantity.MainPage">

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="50">
        
        <Label 
            HorizontalTextAlignment="Center"
            Text="Quantidade" 
            FontSize="50"/>

        <Label
            x:Name="lblCounter"
            HorizontalTextAlignment="Center"
            Text="1"
            FontSize="100"
            TextColor="Red"/>

        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="40">
            <Button
            Clicked="btnPlus_Clicked"
            Text="+"
            x:Name="btnPlus"
            FontSize="48"
            BorderWidth="1" 
            BorderColor="#707070" 
            BackgroundColor="White" 
            WidthRequest="80" 
            HeightRequest="80"/>

            <Button
            Clicked="btnMinus_Clicked"
            x:Name="btnMinus"
            Text="-"
            FontSize="48"
            BorderWidth="1" 
            BorderColor="#707070" 
            BackgroundColor="White" 
            WidthRequest="80" 
            HeightRequest="80"/>
        </StackLayout>

    </StackLayout>
</ContentPage>
